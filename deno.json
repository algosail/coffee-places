{
  "lock": false,
  "tasks": {
    "bot": "deno run --unstable -A --watch=telegram/,utils/ bot.ts",
    "start": "deno run --unstable -A --watch=static/,routes/ dev.ts",
    "db:reset": "deno run --allow-read --allow-net --allow-env --unstable-kv tasks/db_remove_sessions.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
